<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/more_bg"
    tools:context=".hadiths.HadithBooksActivity1">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar" />



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHadithBook"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/appbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="5"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@id/button"
                tools:listitem="@layout/item_hadith_books" />

            <Button
                android:id="@+id/button"
                style="@style/button"
                app:layout_constraintTop_toBottomOf="@+id/rvHadithBook"
                android:background="@drawable/continue_btn_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Ad 320*90"
                />





</androidx.constraintlayout.widget.ConstraintLayout>
</layout>