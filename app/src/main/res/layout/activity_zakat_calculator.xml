<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.ZakatCalculatorActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/more_bg">

        <include
            android:id="@+id/appbar"
            layout="@layout/appbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/resultsCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/rbValueOfGold"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:buttonTint="@color/primary_green"
                        android:checked="true"
                        android:drawableTint="@color/primary_green"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Gold"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rbValueOfSilver"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/white"
                        android:buttonTint="@color/primary_green"
                        android:drawableTint="@color/primary_green"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Silver"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                </RadioGroup>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/radiogroup"
                    app:layout_constraintTop_toTopOf="@+id/radiogroup">

                    <EditText
                        android:id="@+id/etValueOfGold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="8dp"
                        android:layout_toLeftOf="@+id/btnGoldRate"
                        android:background="@drawable/edittext_bg"
                        android:hint="0"
                        android:textCursorDrawable="@drawable/et_cursor"
                        android:inputType="numberDecimal"
                        android:textColor="@color/primary_green"
                        android:textColorHint="@color/grey43" />

                    <Button
                        android:id="@+id/btnGoldRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_rounded_button"
                        android:text="Check Rate"
                        android:textAllCaps="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/radiogroup"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/radiogroup">

                    <EditText
                        android:id="@+id/etSilverRate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="8dp"
                        android:layout_toLeftOf="@+id/btnSilverRate"
                        android:background="@drawable/edittext_bg"
                        android:hint="0"
                        android:textCursorDrawable="@drawable/et_cursor"
                        android:inputType="numberDecimal"
                        android:textColor="@color/primary_green"
                        android:textColorHint="@color/grey43" />

                    <Button
                        android:id="@+id/btnSilverRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_rounded_button"
                        android:text="Check Rate"
                        android:textAllCaps="false" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvCash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Cash"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/radiogroup" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#CCCCCC"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvCash" />

                <TextView
