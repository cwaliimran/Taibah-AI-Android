                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Value of Silver that you possess"
                    android:textColor="@color/grey43"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clValueOfGold" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clValueOfSilver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/continue_btn_bg"
                    android:paddingVertical="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvValueOfSilver">

                    <TextView
                        android:id="@+id/tvRS9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
