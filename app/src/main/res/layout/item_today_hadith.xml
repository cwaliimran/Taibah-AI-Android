<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.network.models.ModelToday.Data" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hadith_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvTodaysVerse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Today's Hadith"/>

                <TextView
                    android:id="@+id/tvArbiHadith"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="إنما الأعمال بالنيات"
                    android:fontFamily="@font/poppins"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tvTodaysVerse"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvTranslation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The reward of deeds depends upon the intentions."
                android:textColor="#4F4D4D"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvArbiHadith"/>


            <TextView
                android:id="@+id/tvHadithFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvTranslation"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Sahih al-Bukhari (1:1)"
                android:backgroundTint="#DFF4DE"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/primary_green"
                android:background="@drawable/item_more_upgradebtn"/>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>